<script>
document.title = "Shuttle Service | Kirby and Brian's Wedding";
$(document).on('turbolinks:load',function(){
	var ico = {
		path: 'M488 128h-8V80c0-44.8-99.2-80-224-80S32 35.2 32 80v48h-8c-13.25 0-24 10.74-24 24v80c0 13.25 10.75 24 24 24h8v160c0 17.67 14.33 32 32 32v32c0 17.67 14.33 32 32 32h32c17.67 0 32-14.33 32-32v-32h192v32c0 17.67 14.33 32 32 32h32c17.67 0 32-14.33 32-32v-32h6.4c16 0 25.6-12.8 25.6-25.6V256h8c13.25 0 24-10.75 24-24v-80c0-13.26-10.75-24-24-24zM112 400c-17.67 0-32-14.33-32-32s14.33-32 32-32 32 14.33 32 32-14.33 32-32 32zm16-112c-17.67 0-32-14.33-32-32V128c0-17.67 14.33-32 32-32h256c17.67 0 32 14.33 32 32v128c0 17.67-14.33 32-32 32H128zm272 112c-17.67 0-32-14.33-32-32s14.33-32 32-32 32 14.33 32 32-14.33 32-32 32z',
		fillOpacity: .9,
		scale: .08,
		strokeColor: '#000',
        fillColor: "#4d6f9c",
		origin: new google.maps.Point(0, 0),
		anchor: new google.maps.Point(16, 28)
	};
	var m = {};
	var l = [["Bus Pickup Area", 35.2230351, -80.8443421],
	["Hilton Charlotte Center City", 35.2234325,-80.8435558]];
	var map = new google.maps.Map(document.getElementById('gmap'), {center: new google.maps.LatLng(35.2232529,-80.8439649), zoom: 18});
	for (var i = 0; i < l.length; i++) {
		m[i] = {};
		var loc = l[i];
		m[i]["w"] = new google.maps.InfoWindow({content: '<div class="info-window"><div class="info-name">'+loc[0]+'</div></div>'});
		if(i===0){
            var marker = new google.maps.Marker({
                position: {lat: loc[1], lng: loc[2]},
                icon: ico,
                map: null, 
                animation: google.maps.Animation.DROP,
            });
        }
        else{
            var marker = new google.maps.Marker({
                position: {lat: loc[1], lng: loc[2]},
                map: null, 
                animation: google.maps.Animation.DROP,
            });
        }
		m[i]["m"] = marker;
	}
    Object.keys(m).forEach(function(key){
        m[key]["m"].setMap(map);
        m[key]["m"].animation = google.maps.Animation.DROP;
        m[key]["w"].open(map, m[key]["m"]);
        m[key]["m"].addListener('click', function() {
            m[key]["w"].open(map, m[key]["m"]);
        });
    });
});
</script>